@model IEnumerable<ProjectViewModel>

<div class="modal fade" id="CreateJobModal" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
            
            <div class="modal-header">
                <img src="~/images/Black/arrow left.svg" alt="back" title="back" data-dismiss="modal" data-toggle="modal" data-target="#CreateModal"/>
            </div>

            <div class="modal-body text-center">
                
                <form asp-action="CreateJob" method="post">
                    <h4 class="create-text">Create Job</h4>

                    <input type="text" placeholder="Job title" class="job-title" name="name" required />
                
                    <div class="project">
                        <h5 class="text-left">Select project</h5>
                        <select id="ListOfProjects" name="projectId">
                            @foreach (var project in Model)
                            {
                                <option value="@project.Id">@project.Name</option>
                            }
                        </select>
                        <p class="create-project-anchor" data-dismiss="modal" data-toggle="modal" data-target="#CreateProjectModal">Create new project</p>
                    </div>
                    
                    <button class="create-button" type="submit">Continue</button>

                    <button class="cancel-button" data-dismiss="modal">Cancel</button>
                </form>

            </div>

        </div>

    </div>
</div>