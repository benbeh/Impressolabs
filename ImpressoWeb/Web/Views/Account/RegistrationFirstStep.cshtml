@{ 
    Layout = "_AccountLayout";
}

@model RegistrationFirstStepViewModel

@section CssFiles {
    <environment include="Staging, Production">
        <link type="text/css" rel="stylesheet" href="~/lib/font-awesome.min.css" />
        <link type="text/css" rel="stylesheet" href="~/css/bundles/registrationFirstStep.min.css"/>
    </environment>

    <environment include="Development">
        <link type="text/css" rel="stylesheet" href="~/lib/font-awesome.min.css" />
        <link type="text/css" rel="stylesheet" href="~/css/Account.css"/>
        <link type="text/css" rel="stylesheet" href="~/lib/toggle-switch.css"/>
    </environment>    
}

<div class="vertical-center">
    <div class="container">
        <div class="row">

            <div class="authentification-form">

                <div class="text-white invitation-text">
                    <h5>Sign Up</h5>
                </div>

                <div class="text-danger" asp-validation-summary="All"></div>

                <form action="/Account/RegistrationFirstStep" method="post">

                    @Html.AntiForgeryToken()
                    
                    <div class="form-group">
                        <label class="switch-light" onclick="">
                            <input type="checkbox"asp-for="IsCompanyChecked">

                            <span class="alert alert-light">
                                <span>Person</span>
                                <span>Business</span>
                                <a></a>
                            </span>
                        </label>
                    </div>

                    <div class="form-group">
                        <input asp-for="Email" placeholder="Email" />
                        <input asp-for="Password" placeholder="Password" />
                    </div>

                    <div class="form-group">
                        <button type="submit">Continue</button>
                        <p>
                            <a href="/Account/Login" class="text-white small-text">Login</a>
                        </p>
                    </div>

                </form>

            </div>

        </div>
    </div>
</div>