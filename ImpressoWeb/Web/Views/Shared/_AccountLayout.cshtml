<!DOCTYPE html>

<html>

<head>
    <title>Impresso</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <environment include="Staging, Production">
        <link type="text/css" rel="stylesheet" href="~/css/bundles/layout.min.css" />
    </environment>

    <environment include="Development">
        <link type="text/css" rel="stylesheet" href="~/lib/bootstrap.css" />
        <link type="text/css" rel="stylesheet" href="~/css/Layout.css" />
    </environment>

    <!-- add css files from partial views -->
    @RenderSection("CssFiles", required: false)

</head>

<body>

    @RenderBody()

    <environment include="Staging, Production">
        <script src="~/js/bundles/accountLayout.min.js"></script>
    </environment>

    <environment include="Development">
        <script src="~/lib/jquery.js" type="text/javascript"></script>
    </environment>

    <!-- add js files from partial views -->
    @RenderSection("JsFiles", required: false)

</body>

</html>